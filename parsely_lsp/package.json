{
    "name": "par",
    "displayName": "par",
    "description": "Syntax highlighting for par",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:par"
    ],
    "repository": {
        "url": "https://github.com/Ocrap7/parsely"
    },
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "par",
                "aliases": [
                    "Parsely",
                    "par"
                ],
                "extensions": [
                    ".par"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [{
            "language": "par",
            "scopeName": "source.par",
            "path": "./syntaxes/xlang.tmLanguage.json"
        }],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "par.lsPath": {
                    "type": "string",
                    "scope": "resource",
                    "markdownDescription": "Path to X language server binary"
                },
                "par.debug": {
                    "type": "boolean",
                    "scope": "resource",
                    "markdownDescription": "Listen for server isntead of automatically starting it"
                }
            }
        }
    },
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.11.18",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh",
        "package": "vsce package"
    }
}